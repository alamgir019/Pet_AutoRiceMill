<script src="~/App/Components/PaddyDues/paddyDuesCltr.js"></script>
<script src="~/App/Components/PaddyDues/paddyDuesSvc.js"></script>
<script src="~/App/Components/Common/commonSvc.js"></script>


<div ng-controller="paddyDuesCltr" class="row">
    <div class="col-md-4">
        <form class="form-horizontal" name="bagReturnForm">
            <div class="form-group">
                <div class="col-sm-12">
                    <h3>ব্যাগ ফেরৎ</h3>
                </div>
            </div>
            <div class="form-group">
                <label for="Party" class="col-sm-4 control-label">পার্টির নাম</label>
                <div class="col-sm-8">
                    <typeahead items="parties" model="bagReturn.partyName" value="bagReturn.partyId" />
                </div>
            </div>
            <div class="form-group">
                <label for="due" class="col-sm-4 control-label">ব্যাগ পাওনা</label>
                <div class="col-sm-6">
                    <input class="form-control" ng-model="bagReturn.bagDue" ng-click="getRemainingBag()" readonly id="due" />
                </div>
                <p class="col-sm-2"><strong>টি</strong></p>
            </div>
            <div class="form-group">
                <label for="due" class="col-sm-4 control-label">টাকা পাওনা</label>
                <div class="col-sm-6">
                    <input class="form-control" ng-model="bagReturn.priceDue" ng-click="getRemainingBag()" readonly id="due" />
                </div>
                <p class="col-sm-2"><strong>টাকা</strong></p>
            </div>
            <div class="form-group">
                <label for="area" class="col-sm-4 control-label">ব্যাগ প্রদান</label>
                <div class="col-sm-6">
                    <bangla-number place-holder="" input-value="bagReturn.comSentB" output-value="bagReturn.comSentBag" required="false" />
                </div>
                <p class="col-sm-2"><strong>টি</strong></p>
            </div>

            <div class="form-group">
                <label for="area" class="col-sm-4 control-label">প্রতি ব্যাগের মূল্য</label>
                <div class="col-sm-6">
                    <bangla-number place-holder="" input-value="bagReturn.sentP" output-value="bagReturn.sentPrice" required="false" />
                </div>
                <p class="col-sm-2"><strong>টাকা</strong></p>
            </div>
            <div class="form-group">
                <label for="date" class="col-md-4 control-label">তারিখ</label>
                <div class="input-group date col-md-8">
                    <input class="form-control" size="16" id="date" name="date" ng-model="bagReturn.date" type="text" required>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                </div>
                <script type="text/javascript">
                    $("#date").datepicker({ dateFormat: 'dd-mm-yy' });
                </script>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-success" ng-click="saveBag()">
                        <span class="glyphicon glyphicon-save" aria-hidden="true"> সেভ</span>
                    </button>
                    <button class="btn btn-success" ng-click="reset()">
                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"> রিসেট</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" style="top:40%; height:100px; overflow:hidden; outline:none;" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4 class="modal-title" id="myModalLabel">Please wait....</h4>
                </div>
            </div>
        </div>
    </div>
</div>


