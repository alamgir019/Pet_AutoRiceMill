@model Johan.DATA.tblCommonElement
@{
    ViewBag.Title = "খাত";
}
<script src="~/App/Components/Sector/sectorService.js"></script>
<script src="~/App/Components/Sector/sectorController.js"></script>
<div class="row">
    <div style="height:20px;"></div>
</div>
<div ng-controller="sectorController" class="row">
    <div class="col-md-4">
        <form class="form-horizontal" name="sectorForm" novalidate>
            <div class="form-group">
                <div class="col-sm-8 col-md-offset-2">
                    <h4>খাত</h4>
                </div>
            </div>

            <div class="form-group">
                <label for="name" class="col-sm-4 control-label">খাতের নাম</label>
                <div class="col-sm-8" ng-class="{ 'has-error' : sectorForm.name.$invalid && submitted }">
                    <input type="text" class="form-control" name="name" data-ng-model="sector.elementName" required>
                </div>
                <p ng-show="sectorForm.name.$invalid && submitted" class="help-block col-lg-offset-4">খাতের ঘর খালি থাকতে পারবে না।</p>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">

                    <button class="btn btn-success" ng-click="save()" ng-disabled="sectorForm.$invalid && submitted">
                        <span class="glyphicon glyphicon-save" aria-hidden="true">সেভ</span>
                    </button>
                    <button class="btn btn-success" ng-click="reset()">
                        <span class="glyphicon glyphicon-refresh" aria-hidden="true">রিসেট</span>
                    </button>
                </div>
            </div>

        </form>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <div class="col-sm-8">
                <h4>খাত সমুহ</h4>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>নাম</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="sc in sectors">
                        <td>{{sc.elementName}}</td>
                        <td>
                            <button class="btn btn-default" value="Edit" ng-click="edit(sc)">
                                <span class="glyphicon glyphicon-pencil"></span>পরিবর্তন
                            </button></td>
                        <td>
                            <button class="btn btn-default" value="Delete" ng-click="delete(sc)">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true">মূছুন</span>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" style="top:40%; height:100px; overflow:hidden; outline:none;" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4 class="modal-title" id="myModalLabel">Please wait....</h4>
                </div>
            </div>
        </div>
    </div>
</div>