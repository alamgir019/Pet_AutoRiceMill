<script src="~/App/Components/Employee/employeeController.js"></script>
<script src="~/App/Components/Employee/employeeService.js"></script>

<div class="pageContainer" ng-controller="employeeCtrl">

    <div class="row">
        <div style="height:30px;"></div>
    </div>

    <div class="row">

        <fieldset class="scheduler-border">
            <legend class="scheduler-border">কর্মচারী/কর্মকর্তার তথ্য</legend>
        </fieldset>
        <div class="col-md-4">
            <form class="form-horizontal" name="empForm" novalidate>
                <div class="form-group">
                    <label for="empname" class="col-sm-4 control-label">নাম</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="empname" ng-model="employee.empName" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="address" class="col-sm-4 control-label">ঠিকানা</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="address" ng-model="employee.address">
                    </div>
                </div>
                <div class="form-group">
                    <label for="contact" class="col-sm-4 control-label">মোবাইল</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="contact" ng-model="employee.contact">
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-4 control-label">পদবী</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="title" ng-model="employee.designation">
                    </div>
                </div>
                <div class="form-group">
                    <label for="date" class="col-sm-4 control-label">যোগদানের তারিখ</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" name="date" required ng-model="employee.joiningDate" id="date">
                    </div>
                    <script type="text/javascript">
                        $("#date").datepicker({ dateFormat: 'dd-mm-yy' });
                    </script>
                </div>
                <div class="form-group">
                    <label for="cursal" class="col-sm-4 control-label">বর্তমান বেতন</label>
                    <div class="col-sm-8">
                        <bangla-number input-value="employee.crntSalary" output-value="employee.currentSalary" required="false" />
                        @*<input type="text" class="form-control" name="cursal" required ng-model="employee.currentSalary" />*@
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">সক্রিয়</label>
                    <div class="col-sm-8">
                        <input type="checkbox" ng-model="employee.active" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" class="btn btn-success" ng-click="save()">
                            <span class="glyphicon glyphicon-save" aria-hidden="true">সেভ</span>
                        </button>
                        <button class="btn btn-success" ng-click="reset()">
                            <span class="glyphicon glyphicon-refresh" aria-hidden="true">রিসেট</span>
                        </button>
                    </div>
                </div>

            </form>
        </div>

        <div class="col-md-8">
            <fieldset class="fsStyle">
                <legend class="legendStyle">
                    <a data-toggle="collapse" data-target="#demo" href="#">কর্মচারী/কর্মকর্তার তালিকা</a>
                </legend>
                <div class="gridStyle" ui-grid="gridOptions"></div>
            </fieldset>
        </div>
    </div>

    <div class="modal fade" id="myModal" tabindex="-1" style="top:40%; height:100px; overflow:hidden; outline:none;" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4 class="modal-title" id="myModalLabel">Please wait....</h4>
                </div>
            </div>
        </div>
    </div>
</div>

