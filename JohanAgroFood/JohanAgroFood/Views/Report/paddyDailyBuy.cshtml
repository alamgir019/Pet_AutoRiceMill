<div class="pageContainer">
    <div class="row">
        <div style="height: 30px;"></div>
    </div>

    <div class="row">

        <fieldset class="scheduler-border">
            <legend class="scheduler-border">প্রতিদিনের ধান ক্রয়ের রিপোর্ট</legend>
        </fieldset>

        <form class="form-horizontal">
            <div class="col-md-4">
                <div class="form-group">
                    <label for="todate" class="col-md-4 control-label">তারিখঃ</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" ng-model="dailyBuyReport.todayDate" id="todate" />
                    </div>
                    <script type="text/javascript">
                        $("#todate").datepicker({ dateFormat: 'dd-mm-yy' });
                    </script>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a class="btn btn-success" id="link-6" target="_blank" ng-href="PreviewPaddyBuy?todayDate={{dailyBuyReport.todayDate}}">রিপোর্ট দেখুন</a>
                    <button class="btn btn-success" ng-click="cancelReport()">
                        <span class="glyphicon glyphicon-refresh" aria-hidden="true">বাতিল</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>