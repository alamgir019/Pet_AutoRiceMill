<script src="~/App/Components/Report/reportCtrl.js"></script>
<script src="~/App/Components/Report/reportSvc.js"></script>
<script src="~/App/Components/Common/commonSvc.js"></script>


<div class="pageContainer" ng-controller="reportCtrl">
    <div class="row">
        <div style="height: 30px;"></div>
    </div>

    <div class="row">

        <fieldset class="scheduler-border">
            <legend class="scheduler-border">প্রতিদিনের আয়ের রিপোর্ট</legend>
        </fieldset>

        <form class="form-horizontal">

            <div class="col-md-4">
                <div class="form-group">
                    <label for="typename" class="col-sm-4 control-label">আয়ের ধরন</label>
                    <div class="col-sm-8">
                        <select type="text" class="form-control" name="typename" data-ng-model="dailySellReport.parentId"
                                ng-options="prod.ID as prod.productName for prod in product" required>
                            <option value=""></option>
                        </select>
                    </div>
                </div>


                <div class="form-group">
                    <label for="todate" class="col-md-4 control-label">তারিখঃ</label>
                    <div class="col-md-8">
                        <input type="text" class="form-control" ng-model="dailySellReport.todayDate" id="todate" />
                    </div>
                    <script type="text/javascript">
                        $("#todate").datepicker({ dateFormat: 'dd-mm-yy' });
                    </script>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <a class="btn btn-success" id="link-6" target="_blank" ng-href="Preview?parentId={{dailySellReport.parentId}}&todayDate={{dailySellReport.todayDate}}">রিপোর্ট দেখুন</a>
                    <button class="btn btn-success" ng-click="cancelReport()">
                        <span class="glyphicon glyphicon-refresh" aria-hidden="true">বাতিল</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>