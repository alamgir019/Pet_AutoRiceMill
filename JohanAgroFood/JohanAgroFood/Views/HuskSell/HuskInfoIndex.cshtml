@{
    ViewBag.Title = "Husk Sell Info";
}
<script src="~/App/Components/HuskSell/huskSellController.js"></script>
<script src="~/App/Components/HuskSell/huskSellService.js"></script>
<script src="~/App/Components/Common/commonSvc.js"></script>

<div class="pageContainer" ng-controller="huskSellController">
    <div class="row">
            <div style="height: 30px;"></div>
        </div>

        <div class="row">

            <fieldset class="scheduler-border">
                <legend class="scheduler-border">তুষের তথ্য</legend>
            </fieldset>

            <form name="huskSellForm" class="form-horizontal" novalidate>

                <div class="col-md-3">
                    <div class="form-group">
                        <label for="Party" class="col-md-4 control-label">পার্টিঃ</label>
                        <div class="col-md-8">
                            <typeahead items="parties" model="huskInfo.partyName" value="huskInfo.partyId" />
                            @*<select class="form-control" jh-select="huskInfo.partyName" ng-model="huskInfo.partyId" ng-options="party.ID as party.name for party in parties" id="Party">
                                <option value=""></option>
                            </select>*@
                            @*<input type="checkbox" ng-checked="huskInfo.partyId = 3010" ng-model="isCash" />ng-disabled="isCash" *@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="stock" class="col-md-4 control-label">স্টকঃ</label>
                        <div class="col-md-8">
                            <select class="form-control"  jh-select="huskInfo.stockName" ng-model="huskInfo.stockId" ng-options="stock.ID as stock.stockName for stock in stocks" id="rice">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="rice" class="col-md-4 control-label">তুষ</label>
                        <div class="col-md-8">
                            <select class="form-control" jh-select="huskInfo.productName" ng-model="huskInfo.productId" ng-options="husk.ID as husk.productName for husk in husks" id="rice">
                                <option value=""></option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="date" class="col-md-4 control-label">তারিখঃ</label>
                        <div class="col-md-8">
                            <input type="text" class="form-control" ng-model="huskInfo.date" id="date">
                        </div>
                        <script type="text/javascript">
                            $("#date").datepicker({ dateFormat: 'dd-mm-yy' });
                        </script>
                    </div>
                </div>

                <div class="col-md-5">
                    <div class="form-group">
                        <label for="rcperbag" class="col-md-4 control-label">প্রতি ব্যাগে পরিমানঃ</label>
                        <div class="col-md-8">
                            <label class="col-md-10">
                                <bangla-number input-value="huskInfo.qty" output-value="huskInfo.quantity" required="true" />
                            </label>
                            <p class="col-sm-2"><strong>ঝুড়ি</strong></p>
                            @*<input type="number" class="form-control" ng-model="huskInfo.quantity" id="rcperbag">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="prpermon" class="col-md-4 control-label">প্রতি ঝুড়ির মূল্যঃ</label>
                        <div class="col-md-8">
                            @*<input type="number" class="form-control" ng-model="huskInfo.unitPrice" id="prpermon" />*@
                            <label class="col-md-10">
                                <bangla-number input-value="huskInfo.uPrice" output-value="huskInfo.unitPrice" required="false" />
                            </label>
                            <p class="col-sm-2"><strong>টাকা</strong></p>
                            @*<div class="checkbox">
                            <label><input type="checkbox" ng-model="huskInfo.isMon" /> মণ</label>
                        </div>*@

                        </div>
                    </div>
                    <div class="form-group">
                        <label for="totbag" class="col-md-4 control-label">মোট ব্যাগঃ</label>
                        <div class="col-md-8">
                            <label class="col-md-10">
                                <bangla-number input-value="huskInfo.noBag" output-value="huskInfo.noOfBag" required="true" />
                            </label>
                            @*<input type="number" class="form-control" ng-model="huskInfo.noOfBag" id="totbag">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="trcost" class="col-md-4 control-label">পরিবহন খরচঃ</label>
                        <div class="col-md-8">
                            <label class="col-md-10">
                                @*<input type="number" class="form-control" ng-model="huskInfo.transportCost" id="trcost" />*@
                                <bangla-number input-value="huskInfo.transCost" output-value="huskInfo.transportCost" required="false" />
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4"></div>
                        <div class="col-md-1">
                            <input type="checkbox" data-ng-model="huskInfo.transportCostInclude" id="trcos" />
                        </div>

                        <label for="trcos">পরিবহন খরচ অর্ন্তভুক্ত</label>

                    </div>
                </div>

                <div class="col-md-4">


                    <div class="form-group">
                        <label for="trno" class="col-md-4 control-label">ট্রাক নাম্বারঃ</label>
                        <div class="col-md-8">
                            <label class="col-md-10">
                                <input type="text" class="form-control" ng-model="huskInfo.truckNumber" id="trno">
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="trno" class="col-md-4 control-label">বর্ণনাঃ</label>
                        <div class="col-md-8">
                            <label class="col-md-10">
                                <input type="text" class="form-control" ng-model="huskInfo.description" id="trno">
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="totprice" class="col-md-4 control-label">মোট মূল্য</label>
                        <div class="col-md-8">
                            <label class="col-md-10">
                                <input type="text" class="form-control" readonly ng-model="huskInfo.totalpr" ng-click="getTotal()" id="totprice">
                            </label>
                            <p class="col-sm-2"><strong>টাকা</strong></p>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="paid" class="col-md-4 control-label">প্রদানকৃত টাকাঃ</label>
                        <div class="col-md-8">
                            <label class="col-md-10">
                                <bangla-number input-value="huskInfo.paidAmnt" output-value="huskInfo.paidAmount" required="false" />
                                @*<input type="number" class="form-control" ng-model="huskInfo.paidAmount" id="paid" />*@
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                        <button class="btn btn-success" ng-click="save()">
                            সেভ
                            @*<span class="glyphicon glyphicon-save" aria-hidden="true"> Save</span>*@
                        </button>
                        <button class="btn btn-success" ng-click="reset()">
                            রিসেট
                            @*<span class="glyphicon glyphicon-refresh" aria-hidden="true"> Reset</span>*@
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div class="row">
            <fieldset class="fsStyle">
                <legend class="legendStyle">
                    <a data-toggle="collapse" data-target="#demo" href="#">বিক্রয়ের তালিকা</a>
                </legend>
                @*<div ui-grid="{ data: myData }" class="myGrid"></div>*@
                <div class="gridStyle" ui-grid="gridOptions"></div>
            </fieldset>
        </div>

    <div class="modal fade" id="myModal" tabindex="-1" style="top:40%; height:100px; overflow:hidden; outline:none;" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4 class="modal-title" id="myModalLabel">Please wait....</h4>
                </div>
            </div>
        </div>
    </div>
    </div>
